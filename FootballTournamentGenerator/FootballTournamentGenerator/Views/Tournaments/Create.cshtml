@using FootballTournamentGenerator.Enums
@model Tournament
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create a new team</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

               

                <div class="form-group">
                    <label asp-for="TournamentFormat">Format</label>
                    <select class="form-control" name="format" asp-items="@Html.GetEnumSelectList<TournamentFormat>()" >
                       
                           
                       
                    </select>


                    <span asp-validation-for="TournamentFormat" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="TournamentTeams">Choose the teams by pressing CTRL</label>
                    <select class="form-control" name="teamIds[]" multiple >
                        @foreach (Team team in ViewBag.Teams)
                        {
                            <option value="@team.Id" >@team.Name</option>
                        }


                    </select>


                    <span asp-validation-for="TournamentTeams" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>


@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}