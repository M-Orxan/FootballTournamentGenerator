@model List<Tournament>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="card-title">Teams</h4>
                <a class="btn btn-outline-success btn-fw" asp-action="Create">Create a new Team</a>
            </div>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>NumberOfParticipants</th>
                            <th>Teams</th>
                            <th>Type</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Tournament tournament in Model)
                        {
                            <tr>
                                <td><a asp-action="Detail" >@tournament.Name</a></td>
                                <td>@tournament.NumberOfParticipants</td>
                                <td>
                                    
                                    @foreach (TournamentTeam tournamentTeam in tournament.TournamentTeams)
                                    {
                                      <div>
                                            @tournamentTeam.Team.Name
                                      </div>
                                        
                                    }
                                </td>

                                <td>@tournament.TournamentFormat</td>

                                <td><a asp-route-id="@tournament.Id" asp-action="Delete" class="btn btn-outline-danger btn-fw">Delete</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>